{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build pebble",
            "type": "shell",
            "command": "pebble build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "install pebble",
            "type": "shell",
            "command": "pebble build && pebble install --logs --phone 192.168.1.107",
            "runOptions": {
                "instanceLimit": 1,
                "runOn": "default"
            }
        }
    ]
}